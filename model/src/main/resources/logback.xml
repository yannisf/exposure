<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %p %t %C[%L]: %m%n</pattern>
        </encoder>
    </appender>
    <logger name="fragsoft" level="debug"/>
    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
